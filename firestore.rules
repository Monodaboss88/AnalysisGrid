rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User-specific alerts - only the owner can read/write
    match /users/{userId}/alerts/{alertId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User-specific trades - only the owner can read/write
    match /users/{userId}/trades/{tradeId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User-specific watchlists - only the owner can read/write
    match /users/{userId}/watchlists/{watchlistId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User profile/settings - only the owner can read/write
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
